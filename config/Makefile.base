	while [ "$${#ARGS[@]}" != "0" ]; do \
	  if [ "$${ARGS[0]}" == "top" ]; then ARGS+=(-$${ARGS[0]}); MODS="1"; \
	  elif [ "$${ARGS[0]}" == "over" ]; then ARGS+=(-$${ARGS[0]}); MODS="1"; \
	  elif [ "$${ARGS[0]}" == "avg" ]; then ARGS+=(-$${ARGS[0]}); MODS="0"; \
