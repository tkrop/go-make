## Git-Support: targets for standard git commands (experimental).
GITFIX ?= git commit --amend --no-edit
GITPUSH ?= git push --force-with-lease
# https://github.com/pvdlg/conventional-changelog-metahub#commit-types
COMMIT_CONVENTION ?= feat deprecate remove docs fix style refactor \
	perf test build ci chore
git-message = \
	if [ -z "$${MESSAGE}" ]; then MESSAGE="chore: update deps"; fi; \
	if ! [[ "$${MESSAGE}" =~ ^[^:]+:.*$$ ]]; then MESSAGE="$(1): $${MESSAGE}"; fi; \
	if ! [[ "$${MESSAGE}" =~ ^.*\([^()]*\#[0-9]+\)$$ ]]; then \
	  COMMIT="$$(git log --max-count=1 --pretty=format:'%s' | \
	    sed -E 's/^.*\(?([^() ]*\#[0-9]+)\)?.*$$/\1/')"; \
	  NUMBER="$${COMMIT\#\#*\#}"; CONTEXT="$${COMMIT%%\#*}"; \
	  MESSAGE="$${MESSAGE} ($${CONTEXT}\#$$((NUMBER+$(2))))"; \
	fi
git-main = $$(git remote show origin | grep "HEAD branch:" | cut -d ' ' -f 5)
git-clean = \
	git fetch --all --prune --verbose; \
	HISTORY=($$(git log --pretty=format:"%T" "$${MAIN}")); \
	for BRANCH in $$(git branch | cut -c 3- | grep -vw "$(1)"); do \
	  TIP="$$(git log --max-count=1 --pretty=format:"%T" "$${BRANCH}")"; \
	  if [[ "$${HISTORY[@]}" =~ $${TIP} ]]; then \
	    git branch --delete --force "$${BRANCH}"; \
	  elif [ "$(RUNARGS)" == "all" ]; then \
	    git branch --delete "$${BRANCH}"; \
	  else echo "info: keeping $${BRANCH}" > /dev/stderr; \
	  fi; \
	done; git fetch --all --prune --verbose

#@ prints the git log as pretty graph.
git-graph::
	@SUFFIX="%C(bold blue)[%an]%Creset%C(yellow)%d%Creset"; \
	git log --graph --all --date=iso \
	  --pretty=format:"%Cred%h %t %Cgreen%ad%Creset | %s $${SUFFIX}";
#@ [all] @ cleans up the git history removing merged branches except the current.
git-clean::
	@BRANCH="$$(git branch --show-current)"; MAIN="$(git-main)"; \
	$(call git-clean,$${MAIN}\|$${BRANCH});
#@ [all] @ checks out default branch and cleans up the git history removing merged branches.
git-reset::
	@BRANCH="$$(git branch --show-current)"; MAIN="$(git-main)"; \
	if [ "$${BRANCH}" != "$${MAIN}" ]; then \
	  git checkout "$${MAIN}" && git pull || ( \
	    git stash && git checkout "$${MAIN}" && git pull && git stash apply \
	  ) \
	fi || exit 1; $(call git-clean,$${MAIN});
#@ <branch> <message> # creates a branch with the current change set using next issue.
git-create:: git-create-feat
# TODO: check whether I'm on the default branch and on remote HEAD.
$(addprefix git-create-,$(COMMIT_CONVENTION)):: git-create-%:
	@BRANCH="$(firstword $(RUNARGS))"; \
	MESSAGE="$(wordlist 2,$(words $(RUNARGS)),$(RUNARGS))"; \
	if [ -z "$${BRANCH}" ]; then BRANCH="update-deps"; fi; \
	$(call git-message,$*,1); \
	git checkout -B "$${BRANCH}" && \
	git commit --signoff --message "$${MESSAGE}" && \
	git push --set-upstream origin "$${BRANCH}" || \
	git checkout $${BRANCH}; exit;
#@ <message> # commits the current change set using the given message with current issue.
git-commit:: git-commit-feat
$(addprefix git-commit-,$(COMMIT_CONVENTION)):: git-commit-%:
	@MESSAGE="$(RUNARGS)"; $(call git-message,$*,0); \
	git commit --signoff --message "$${MESSAGE}"; exit;
#@ pushes the latest changes to the previous commit of the origin.
git-fix::
	@GITFIX=($(patsubst %,"%",$(GITFIX))); GITPUSH=($(patsubst %,"%",$(GITPUSH))); \
	if [[ "$(RUNARGS)" =~ verify ]]; then GITFIX=("$${GITFIX[@]/--no-verify}"); fi; \
	if [[ "$(RUNARGS)" =~ no-verify ]]; then GITFIX+=("--no-verify"); fi; \
	if [[ "$(RUNARGS)" =~ edit ]]; then GITFIX=("$${GITFIX[@]/--no-edit}"); fi; \
	if [[ "$(RUNARGS)" =~ no-edit ]]; then GITFIX+=("--no-edit"); fi; \
	echo "$${GITFIX[@]} && $${GITPUSH[@]}"; "$${GITFIX[@]}" && $${GITPUSH[@]}; exit;
#@ pushes the current branch to the same branch of the origin.
git-push::
	@git push --set-upstream origin \
	  $$(git branch 2> /dev/null | sed -e '/^[^*]/d; s/* \(.*\)/\1/');


## Init: targets to initialize tools and (re-)sources.

#@ initialize the project to prepare it for building.
init:: $(TARGETS_INIT)
#@ initialize the go module and package dependencies.
init-go:: go.sum
go.sum: go.mod
	$(GO) mod tidy -go=$(GOVERSION) && touch go.sum &&	$(GO) mod download;
go.mod:
	$(GO) mod init "$(REPOSITORY)";
#@ initialize the pre-commit hook.
init-hooks:: .git/hooks/pre-commit
.git/hooks/pre-commit:
	@if [ -n "$$(cat Makefile | grep "^GOMAKE ?=.*")" ]; then \
	  ( echo -e "#!/bin/sh\n"; \
	    echo -e "echo \"make commit\" >/dev/stderr"; \
	    echo -e "make commit" ) >$@; chmod 755 $@; \
	fi; \

#@ initialize the generated sources.
init-sources:: $(MOCKS)
$(MOCKS):: go.sum $(MOCK_SOURCES) $(GOBIN)/mockgen $(GOBIN)/mock
	$(GO) generate "$(shell echo $(MOCK_TARGETS) | \
	  sed -E "s|.*$@=([^ ]*).*$$|\1|")";

#@ initialize the codacy support - if enabled.
init-codacy:: $(TARGETS_INIT_CODACY)
$(TARGETS_INIT_CODACY):: init-%:
	@VERSION="$(CODACY_$(call upper,$*)_VERSION)"; \
	FILE="$(GOBIN)/codacy-$*-$${VERSION}"; \
	if [ ! -f $${FILE} ]; then \
	  BASE="https://github.com/codacy/codacy-$*/releases/download"; \
