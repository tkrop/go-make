	if [ "$${MODULE##*@}" != "latest" ]; then \
	  MVERSION="$$($(GO) version -m "$(GOBIN)/$*" | \
	    grep "^\s*mod\s*$${MODULE%%@*}" | cut -f 4)"; \
	  if [ "$${MVERSION}" != "$${MODULE##*@}" ]; then \
	    echo "warning: $* version ($${MVERSION} => $${MODULE##*@})" > /dev/stderr; \
	  fi; \
	fi;
